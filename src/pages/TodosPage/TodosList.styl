.todos-list-container
  margin-top .3em
  background #fff
  box-shadow: 1px 1px 3px rgba(97, 97, 97, 0.38);

.todos-list
  margin 0
  padding 0
  list-style none

.todo-item
  padding 1em
  cursor pointer
  user-select none

  &:hover
    background-color #fafafa

  +.todo-item
    border-top 1px solid #f3f3f3

.todo-completed
  text-decoration line-through
